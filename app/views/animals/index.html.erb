<div class="container">
  <p><%= @animals.count %> pets to rent</p>
  <div class='cards'>
  <% @animals.each do |animal| %>
<%= link_to animal_path(animal) do %>
    <div class="card-trip">
      <%= cl_image_tag animal.photo %>
       <div class="card-trip-infos">
         <div>
           <h2><%= animal.name %></h2>
           <p><%= animal.species %></p>
         </div>
         <h2 class="card-trip-pricing"><%= animal.price %>/ night</h2>
       </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
