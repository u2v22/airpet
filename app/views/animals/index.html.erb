<div class="container">
  <div class="all-wrapper">
    <div class="animal-wrapper">
      <p><%= @animals.count %> pets to rent</p>
      <div class='cards'>
        <% @animals.each do |animal| %>
        <%= link_to animal_path(animal) do %>
          <div class="card-trip">
            <%= cl_image_tag animal.photo %>
             <div class="card-trip-infos">
               <div>
                 <h2><%= animal.name %></h2>
                 <p><%= animal.species %></p>
               </div>
               <h2 class="card-trip-pricing"><%= animal.price %>â‚¬ / day</h2>
             </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div
      id="map";
      class="map-wrapper";
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
