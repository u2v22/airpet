<div class="container">
  <div class="row"> <!--Dividing the screen in 2-->
    <div class="col"> <!--First half of the screen-->

      <%= cl_image_tag(@animal.photo, width: 550, height: 550, crop: :fill) %>

      <div class="card">
        <h1><%=@animal.name%></h1>
        <p><%=@animal.species%></p>
        <div class="d-flex justify-content-between">
          <p><%=@animal.location%></p>
          <p><%=@animal.user.name%></p>
        </div>
      </div>


      <div class="card">
        <h4><%=@animal.name%>: </h4>
        <i><p>"<%=@animal.characteristics%>"</p></i>
      </div>

      <div class="card">
        <div>
          <h4>Reviews</h4>
          <p><%=pluralize @animal.reviews.size, "review"%> about <%=@animal.name%></p>
        </div>

        <div class="border-bottom mb-4">
          <%if @animal.reviews.blank?%>
            <p>Be the first to leave a review for <%=@animal.name%></p>
          <%else%>
            <div id="reviews">
              <%@animal.reviews.each do |review|%>
                <%= render "animals/review", review: review %>
              <%end%>
            </div>
          <%end%>
        </div>

        <div>
          <p>How did you like <%=@animal.name%>?</p>
          <%=render "reviews/form", animal: @animal, review: Review.new %>
        </div>
      </div>
    </div>

    <div class="col"> <!--Second half of the screen-->
      <div class="sticky-top card">
        <div class="border-bottom mb-4">
          <h2>Booking</h2>
          <p>Enter the dates on which you would want to book the <%=@animal.species%> <%=@animal.name%></p>
        </div>

        <div>
          <%=render "bookings/form"%>
        </div>

      </div>
    </div>
  </div>
</div>

<div>
  <%= link_to "Back to all animals", animals_path, class:"button-primary" %>
</div>
