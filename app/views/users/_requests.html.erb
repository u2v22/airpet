<% if @requests.present? %>
  <div class="pet-header">
    <h3 class="my-pets-cards">Your Requests
      <%= link_to root_path do  %>
      <i class="fas fa-plus"></i>
    <% end %></h3>
    <div class='cards'>
      <%@requests.each do |request|%>
        <div class="card-trip">
          <%= link_to animal_path(request.animal) do  %>
          <%= cl_image_tag request.animal.photo %>
          <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= request.animal.name %></h2>
              <p><%= request.animal.species %></p>
              <p><%= request.start_date %>~<%= request.end_date %></p>
            </div>
            <h2 class="card-trip-pricing text-right">
            <p> Status: <%= request.status %></p>
            <br>
            <%= link_to accept_booking_path(request), method: :patch do  %>
            <i class="fas fa-check"></i>
            <% end %>
            <%= link_to decline_booking_path(request), method: :patch do  %>
            <i class="far fa-times-circle"></i>
            <% end %>
            </h2>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <%=  %>
<% end %>
